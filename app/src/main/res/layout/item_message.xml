<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/leftText_layout"
        android:layout_width="310dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/left_background"
            android:elevation="2dp"
            android:padding="12dp"
            android:text="left"
            android:textColor="#212121" />
    </RelativeLayout>

    <!--preview add-->
    <RelativeLayout
        android:id="@+id/previewGroup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftText_layout"
        android:layout_marginLeft="10dp"
        android:background="@drawable/left_background"
        android:padding="10dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/img_preview_iv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="10dp" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/site_tv"
            android:textColor="#212121"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/title_tv"
            android:maxLength="200"
            android:textColor="#212121"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/site_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/img_preview_iv"
            android:background="@drawable/left_background"
            android:textColor="#212121"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="12dp"
        android:text="right"
        android:textColor="#8c8a8a" />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
